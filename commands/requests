const { SlashCommandBuilder, EmbedBuilder, ActionRowBuilder, ButtonBuilder, ButtonStyle } = require('discord.js');

module.exports = {
    data: new SlashCommandBuilder()
        .setName('requests')
        .setDescription('View and manage trip join requests'),
    async execute(interaction, { trips, requests }) {
        const userId = interaction.user.id;
        const pendingRequests = await requests.find({ targetUserId: userId }).toArray();

        if (pendingRequests.length === 0) {
            const embed = new EmbedBuilder()
                .setColor('#3498DB')
                .setTitle('Trip Requests')
                .setDescription('You have no pending trip join requests.')
                .setFooter({
                    text: 'Your Japan Travel Buddy!',
                    iconURL: interaction.client.user.displayAvatarURL()
                })
                .setTimestamp();
            return await interaction.editReply({ embeds: [embed] });
        }

        const request = pendingRequests[0]; // Show one at a time for simplicity
        const trip = await trips.findOne({ tripId: request.tripId });
        const embed = new EmbedBuilder()
            .setColor('#FFD700') // Gold for a warm, inviting feel
            .setTitle('Trip Join Request')
            .setDescription(`<@${request.requesterId}> has invited you to join **${trip.name}** (ID: ${trip.tripId}).`)
            .addFields({ name: 'Pending Requests', value: `${pendingRequests.length}`, inline: true })
            .setFooter({
                text: 'Your Japan Travel Buddy!',
                iconURL: interaction.client.user.displayAvatarURL()
            })
            .setTimestamp();

        const buttons = new ActionRowBuilder()
            .addComponents(
                new ButtonBuilder()
                    .setCustomId(`accept_request_${request.requestId}_0`)
                    .setLabel('Accept')
                    .setStyle(ButtonStyle.Success),
                new ButtonBuilder()
                    .setCustomId(`decline_request_${request.requestId}_0`)
                    .setLabel('Decline')
                    .setStyle(ButtonStyle.Danger)
            );

        await interaction.editReply({ embeds: [embed], components: [buttons] });
    },
};